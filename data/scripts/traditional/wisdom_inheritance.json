    "scenes": [
        {
            "id": "scene_001",
            "heading": "مجلس الشيخ - داخلي - قبيل المغرب",
            "setting_description": "مجلس بسيط مليء بالكتب والمخطوطات. ضوء الشمس المائل يتسلل من النافذة المشربية.",
            "cultural_elements": [
                "مجلس العلم",
                "مخطوطات",
                "مشربية"
            ],
            "action": "الشيخ سالم يجلس متكئاً على وسادة، بين يديه كتاب قديم. يدخل حفيده عبدالرحمن بأدب.",
            "dialogue": [
                {
                    "character": "عبدالرحمن",
                    "text": "السلام عليكم ورحمة الله وبركاته، يا جدي.",
                    "dialect": "classical_arabic",
                    "cultural_markers": ["السلام الكامل", "أدب الدخول"]
                },
                {
                    "character": "الشيخ سالم",
                    "text": "وعليكم السلام ورحمة الله وبركاته. تعال يا بني، اجلس قربي.",
                    "dialect": "classical_arabic",
                    "cultural_markers": ["رد السلام", "دعوة بمحبة"]
                },
                {
                    "character": "الشيخ سالم",
                    "text": "اعلم يا بني أن العلم كالماء، يجري من العالي إلى المنخفض. فتواضع للعلم يرفعك.",
                    "dialect": "classical_arabic",
                    "cultural_markers": ["حكمة", "تشبيه بليغ", "نصيحة"]
                }
            ]
        },
        {
            "id": "scene_002",
            "heading": "حديقة المنزل - خارجي - عصراً",
            "setting_description": "حديقة تقليدية، فيها نخيل وأشجار حمضيات. مجلس صغير في ركن الحديقة.",
            "cultural_elements": [
                "نخيل",
                "مجلس خارجي",
                "طبيعة تقليدية"
            ],
            "action": "الشيخ سالم يمشي متكئاً على عصاه، يشير إلى النخلة أمامه، وعبدالرحمن يستمع باهتمام.",
            "dialogue": [
                {
                    "character": "الشيخ سالم",
                    "text": "انظر إلى هذه النخلة يا بني. أغرسها جدي، وسقاها أبي، وأثمرت في عهدي، وها أنت تأكل من ثمرها.",
                    "dialect": "classical_arabic",
                    "cultural_markers": ["رمزية النخلة", "تعاقب الأجيال"]
                },
                {
                    "character": "عبدالرحمن",
                    "text": "نعم يا جدي. وكذلك العلم، نغرسه في أنفسنا فيثمر لأجيالنا.",
                    "dialect": "classical_arabic",
                    "cultural_markers": ["فهم الحكمة", "ربط المعاني"]
                }
            ]
        }
    ],
